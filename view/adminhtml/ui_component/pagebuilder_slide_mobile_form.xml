<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_slide_form">
    <fieldset name="advanced">
        <field name="margins_and_padding">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="null" />
                    <item name="breakpoints" xsi:type="array">
                        <item name="mobile" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-min-height-mobile">true</class>
                    <class name="admin__field-min-height">true</class>
                </additionalClasses>
                <tooltip>
                    <description translate="true">
                        <![CDATA[
                        <p>Style changes will only affect this breakpoint</p>
                        ]]>
                    </description>
                </tooltip>
            </settings>
        </field>
    </fieldset>
</form>

